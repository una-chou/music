.ex-tag1 {
  background-color: #fffbdd !important;
}
.ex-tag2 {
  background-color: #eefbff !important;
}
.detail-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-bottom: 100rpx;
  font-size: 28rpx;
  color: #666;
}
.vertical {
  display: flex;
  flex-direction: column;
}
.description {
  color: #999;
  margin-right: 30rpx;
}
/* 短评 */
.post-container {
  height: 100rpx;
  box-shadow: 1px -1px 1px #e3e3e3;
  position: fixed;
  width: 690rpx;
  background-color: #fff;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
}
.post-fake {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  width: 460rpx;
  border: 1px solid #999;
  border-radius: 15px;
  font-size: 22rpx;
  padding-left: 20rpx;
}
.like-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.like {
  margin-right: 30rpx;
  margin-top: 10rpx;
}
/* 评论弹出框 */
.posting-container {
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  width: 100%;
  z-index: 999;
}
.post-header {
  width: 100%;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.cancel {
  color: #666;
}
.post-header text {
  padding: 25rpx;
}
.post-header>text:first-child {
  color: #bbb;
  font-size: 28rpx;
}
.posting-container .comment-container {
  width: 690rpx;
  padding: 40rpx 30rpx 0 30rpx;
}
.post {
  width: 690rpx;
  height: 56rpx;
  margin: 30rpx auto;
  padding-left: 25rpx;
  background-color: #f5f5f5;
  border-radius: 15px;
}
.shadow {
  color: #999;
}