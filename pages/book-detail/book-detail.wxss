.container {
  width: 100%;
  background-color: #f5f5f5;
}
.head {
  background-color: #fff;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title {
  color: #2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
}
.author {
  font-size: 28rpx;
  color: #999;
}
.head image {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}
.sub-container {
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  padding: 30rpx;
  background-color: #fff;
}
.headline {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: #2f2f2f;
}
.comment-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.comment-container v-tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}
.content {
  text-indent: 58rpx;
  font-weight: 500;
}
.num {
  margin-left: 10rpx;
  font-size: 22rpx;
  color: #aaa;
}
